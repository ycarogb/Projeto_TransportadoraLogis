@model List<Produto>

<div class="text-center">
    <a class="btn btn-secondary btn-lg" asp-controller="Home" asp-action="Inserir">Inserir Produto</a>
</div>
<hr />

@if (Model.Count() > 10)
            {
                <div class="alert alert-success d-flex align-items-center" role="alert">
                    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill" /></svg>
                    <div>
                        Cadastro realizado com sucesso!!
                    </div>
                </div>
            }

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(Model => Model.First().Codigo)</th>
            <th scope="col">@Html.DisplayNameFor(Model => Model.First().Cliente)</th>
            <th scope="col">@Html.DisplayNameFor(Model => Model.First().Destino)</th>
            <th scope="col">@Html.DisplayNameFor(Model => Model.First().DataSaida)</th>
            <th scope="col">@Html.DisplayNameFor(Model => Model.First().Quantidade)</th>
            <th scope="col">Ações</th>
         </tr>
    </thead>
    <tbody>
        @foreach (Produto p in Model)
        {
        <tr>
            <th scope="row">@Html.DisplayFor(Model => p.Codigo)</th>
            <th scope="row">@Html.DisplayFor(Model => p.Cliente)</th>
            <th scope="row">@Html.DisplayFor(Model => p.Destino)</th>
            <th scope="row">@Html.DisplayFor(Model => p.DataSaida)</th>
            <th scope="row">@Html.DisplayFor(Model => p.Quantidade)</th>
            <th><a asp-controller="Produto" asp-action="Read" asp-route-id="@p.Id">Detalhes do Pedido</a> | 
                <a asp-controller="Produto" asp-action="Update" asp-route-id="@p.Id">Editar</a> |                
                <a asp-controller="Produto" asp-action="Remove" asp-route-id="@p.Id">Excluir</a>                 
            </th>
        </tr>
        }
    </tbody>
</table>