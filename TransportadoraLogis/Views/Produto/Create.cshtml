@model Produto

<div class="row">
    <form class="col-md-4" asp-action="Create">
        <div class="form-group">
        <label class="control-label" asp-for="Destino"></label>
        <input class="form-control" asp-for="Destino" />
        <span class="text-danger" asp-validation-for="Destino"></span>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="DataSaida"></label>
            <input class="form-control" asp-for="DataSaida" />
            <span class="text-danger" asp-validation-for="DataSaida"></span>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="Quantidade"></label>
            <input class="form-control" asp-for="Quantidade" />
            <span class="text-danger" asp-validation-for="Quantidade"></span>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="Codigo"></label>
            <input class="form-control" asp-for="Codigo" />
            <span class="text-danger" asp-validation-for="Codigo"></span>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="clienteId"></label>
            <select class="form-control" asp-for="clienteId" asp-items="ViewBag.listaClientes">
                <option value="">-- Selecione --</option>
            </select>

            <span class="text-danger" asp-validation-for="clienteId"></span>
        </div>

        <input type="submit" class="btn btn-primary" value="Inserir" />
        <a asp-controller="Home" asp-action="Index">Início</a>
    </form>
</div>